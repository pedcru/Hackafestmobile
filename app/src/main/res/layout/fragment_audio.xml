<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="¿NUEVO REGISTRO SOLICITANTE?"
        android:textColor="#1e1e1e"
        style="@style/title" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Para qué va a ocupar el crédito?, Agricultura o ganadería "
        style="@style/subtitle"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿cuanto tiempo y experiencia tiene en el area( agricola o ganadera )?"
        style="@style/subtitle"
        />

    <Button
        android:id="@+id/button"
        style="@style/primarybutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Audio"

        />

    <TextView
        android:id="@+id/porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>